            <!--<mvc:mapping path="/admin/*"/>-->
            <!--<bean class="cafemanager.interceptors.AuthenticationInterceptor"/>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->



    <tx:annotation-driven/>

</beans>